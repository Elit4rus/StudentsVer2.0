<Page x:Class="StudentsVer2._0.View.Pages.Menu.StudentDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentsVer2._0.View.Pages.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1920"
      Title="StudentDetailPage">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Name="BackBtn" 
                Content="Назад" 
                Width="120" 
                Height="40" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" 
                FontSize="18"
                Margin="30 0 0 0"
                Click="BackBtn_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontFamily" Value="Roboto"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}">
                                    <ContentPresenter Margin="0 2 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#5367D3"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="BorderBrush" Value="#5367D3"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="290"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/Resource/Icons/account.png" />
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="SurnameTbl" FontSize="20" FontWeight="Medium"/>
                    <TextBlock Grid.Column="2" x:Name="NameTbl" FontSize="20" FontWeight="Medium"/>
                    <TextBlock Grid.Column="4" x:Name="PatronymicTbl" FontSize="20" FontWeight="Medium"/>
                </Grid>
            </Grid>
            <Border CornerRadius="1" Margin="30 0" Background="Black" Height="2" VerticalAlignment="Bottom"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="170"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Личные данные" Grid.Row="1" Margin="33 0" FontSize="20"/>
                <Border Grid.Row="2" VerticalAlignment="Bottom" CornerRadius="1" Margin="30 0" Background="#5367D3" Height="2" Width="155" HorizontalAlignment="Left"/>
                <Border Grid.Row="5" VerticalAlignment="Bottom" CornerRadius="1" Margin="30 0" Background="Black" Height="2"/>
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <Border x:Name="PassportBorder" CornerRadius="3" Grid.Row="4" Margin="30 0" Width="201" HorizontalAlignment="Left" Height="170">
                        <Border.Style>
                            <Style TargetType="Border">
                                <!-- Установка начального стиля -->
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush">
                                    <Setter.Value>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Rectangle Stroke="#5367D3" StrokeDashArray="1 1" StrokeThickness="2" RadiusX="2" RadiusY="2" Width="100" Height="100"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderThickness" Value="2"/>
                                <!-- Изменение стиля при наведении -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#5367D3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Image x:Name="PassportIconImg" Source="/Resource/Icons/Group 17.png" Grid.Row="1"/>
                            <TextBlock x:Name="PassportTextTbl" Grid.Row="3" Foreground="#5367D3" FontSize="17" Text="Заполнить паспорт" Margin="30 0" TextWrapping="Wrap" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border x:Name="MilitaryCertificateBorder" CornerRadius="3" Grid.Row="4" Margin="30 0" Width="201" HorizontalAlignment="Left" Height="170">
                        <Border.Style>
                            <Style TargetType="Border">
                                <!-- Установка начального стиля -->
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush">
                                    <Setter.Value>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Rectangle Stroke="#5367D3" StrokeDashArray="1 1" StrokeThickness="2" RadiusX="2" RadiusY="2" Width="100" Height="100"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderThickness" Value="2"/>
                                <!-- Изменение стиля при наведении -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#5367D3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Image x:Name="MilitaryCertificateIconImg" Source="/Resource/Icons/Group 17.png" Grid.Row="1"/>
                            <TextBlock x:Name="MilitaryCertificateTbl" Grid.Row="3" Foreground="#5367D3" FontSize="17" Text="Заполнить приписное св-во" Margin="30 0" TextWrapping="Wrap" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <Border x:Name="INNBorder" CornerRadius="3" Grid.Row="4" Margin="30 0" Width="201" HorizontalAlignment="Left" Height="170">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Rectangle Stroke="#5367D3" StrokeDashArray="1 1" StrokeThickness="2" RadiusX="2" RadiusY="2" Width="100" Height="100"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Rectangle Stroke="#5367D3" StrokeThickness="2" Width="100" Height="100" RadiusX="2" RadiusY="2"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="3" Foreground="#5367D3" FontSize="17" Text="Заполнить ИНН" Margin="30 0" TextWrapping="Wrap" TextAlignment="Center"/>
                            <Image Source="/Resource/Icons/Group 17.png" Grid.Row="1"/>
                        </Grid>
                    </Border>

                    <Border x:Name="InsuranceNumber" CornerRadius="3" Grid.Row="4" Margin="30 0" Width="201" HorizontalAlignment="Left" Height="170">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Rectangle Stroke="#5367D3" StrokeDashArray="1 1" StrokeThickness="2" RadiusX="2" RadiusY="2" Width="100" Height="100"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Rectangle Stroke="#5367D3" StrokeThickness="2" Width="100" Height="100" RadiusX="2" RadiusY="2"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="3" Foreground="#5367D3" FontSize="17" Text="Заполнить СНИЛС" Margin="30 0" TextWrapping="Wrap" TextAlignment="Center"/>
                            <Image Source="/Resource/Icons/Group 17.png" Grid.Row="1"/>
                        </Grid>
                    </Border>

                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Документы" Grid.Row="1" Margin="36 0" FontSize="20"/>
                <Border Grid.Row="2" VerticalAlignment="Bottom" CornerRadius="1" Margin="30 0" Background="#5367D3" Height="2" Width="116" HorizontalAlignment="Left"/>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
            <TextBlock x:Name="GroupTbl"/>
        </StackPanel>
    </Grid>
</Page>

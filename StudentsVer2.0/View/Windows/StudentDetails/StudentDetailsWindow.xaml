<Window x:Class="StudentsVer2._0.View.Windows.StudentDetails.StudentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsVer2._0.View.Windows.StudentDetails"
        mc:Ignorable="d"
        Title="StudentDetailsWindow" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Фамилия:" FontWeight="Bold"/>
            <TextBlock x:Name="SurnameTbl" Margin="0,0,0,10"/>

            <TextBlock Text="Имя:" FontWeight="Bold"/>
            <TextBlock x:Name="NameTbl" Margin="0,0,0,10"/>

            <TextBlock Text="Отчество:" FontWeight="Bold"/>
            <TextBlock x:Name="PatronymicTbl" Margin="0,0,0,10"/>

            <TextBlock Text="Группа:" FontWeight="Bold"/>
            <TextBlock x:Name="GroupTbl" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsVer2._0.View.Windows.Documents"
        mc:Ignorable="d"
        Title="Просмотр изображения" Width="800" Height="600">
    <Grid>
        <Image x:Name="ImageViewer" Stretch="Uniform" />
        <Button x:Name="DeleteBtn" Content="Удалить" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
